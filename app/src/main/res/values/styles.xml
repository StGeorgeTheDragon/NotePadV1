<?xml version="1.0" encoding="utf-8"?>

<!-- res/values/styles.xml -->
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Text Appearance -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColor">@color/textColor</item>

        <!-- Background -->
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:colorBackground">@color/colorBackground</item>

        <!-- Button Style -->
        <item name="android:buttonStyle">@style/AppButtonStyle</item>

        <!-- Add other attributes as needed -->
    </style>

    <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <!-- Dark mode theme attributes -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>

        <!-- Text Appearance -->
        <item name="android:textColorPrimary">@color/textColorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryDark</item>
        <item name="android:textColor">@color/textColorDark</item>

        <!-- Background -->
        <item name="android:windowBackground">@color/windowBackgroundDark</item>
        <item name="android:colorBackground">@color/colorBackgroundDark</item>

        <!-- Button Style -->
        <item name="android:buttonStyle">@style/AppButtonStyleDark</item>

        <!-- Add other attributes as needed -->
    </style>

    <style name="AppButtonStyleDark" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorAccentDark</item>
    </style>

</resources>
